    <layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/rakamin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingHorizontal="30dp"
                android:gravity="center_vertical"
                android:orientation="vertical"> <!-- Menggunakan layout_weight untuk mengisi sisa ruang di linear layout -->

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginVertical="5dp"
                    android:hint="username"
                    />
<!--                android:text="@={viewModel.username}"-->

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginVertical="5dp"
                    android:hint="password"
                    />
<!--                android:text="@={viewModel.pass}"-->

            </LinearLayout>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"
                android:background="@color/rakamin"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Login"
                />
<!--            android:onClick="@{()->viewModel.submit()}"-->

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Don't have an account? Create an account" />

        </LinearLayout>

    </layout>

<!--</androidx.constraintlayout.widget.ConstraintLayout>-->