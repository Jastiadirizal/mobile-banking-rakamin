<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.DashboardActivity">

        <!-- Bagian 1 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            android:paddingVertical="50dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/namaHome"
                    android:text="halo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Good Morning, remember to save today " />

                <Button
                    android:id="@+id/editProfilButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/rakamin"
                    android:textStyle="bold"
                    android:text="Edit Profil" />


            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_menu"
                />

        </LinearLayout>

        <!-- Bagian 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:orientation="vertical"
            android:background="@color/rakamin"
            >

            <!--saldo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Balance"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/saldoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 1000000"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/card"
                />

            <!-- Bagian 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginBottom="10dp"
                    android:text="Get Your Money Working On You" />

                <!-- Kotak 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        >

                        <ImageView
                            android:id="@+id/fitur1"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"

                            app:srcCompat="@drawable/fitur1" />

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="Invest Your Money"
                            android:textColor="@color/black"
                            android:id="@+id/textView1" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="50dp"
                            android:layout_toRightOf="@id/textView"
                            android:foregroundGravity="right"
                            app:srcCompat="@drawable/right_arrow" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                    <!-- Kotak 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:cardBackgroundColor="@android:color/white"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="4dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            >

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"

                                app:srcCompat="@drawable/fitur2" />

                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:text="Safe For Emergency"
                                android:textColor="@color/black"
                                android:id="@+id/textView2" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="50dp"
                                android:layout_toRightOf="@id/textView"
                                android:foregroundGravity="right"
                                app:srcCompat="@drawable/right_arrow" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kotak 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="4dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        >

                        <ImageView
                            android:id="@+id/fitur3"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"

                            app:srcCompat="@drawable/fitur3" />

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="Set Life Goals"
                            android:textColor="@color/black"
                            android:id="@+id/textView3" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="50dp"
                            android:layout_toRightOf="@id/textView"
                            android:foregroundGravity="right"
                            app:srcCompat="@drawable/right_arrow" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
